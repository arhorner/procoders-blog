<div class="c-articles">
  <h1>All Articles</h1>
  <%= link_to 'New Article', new_admin_article_path %>
  <div class="c-articles__list">
    <table>
      <tr>
        <th>Title</th>
        <th>Post</th>
        <th colspan="3"></th>
      </tr>


      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td><%= link_to 'Show', admin_article_path(article) %></td>
          <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
          <td><%= link_to 'Destroy', admin_article_path(article),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
